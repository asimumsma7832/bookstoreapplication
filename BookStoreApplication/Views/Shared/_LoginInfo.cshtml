@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager

@if (_signInManager.IsSignedIn(User))
{
    <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Hello
            @(User.FindFirst("UserFirstName").Value + " " + User.FindFirst("UserLastName").Value )
        </a>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a></li>
            <li><a class="dropdown-item" asp-action="ChangePassword" asp-controller="Account">Change Password</a></li>
        </ul>
        </div>    
}
else
{
    <li class="nav-item">
        <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Context.Request.Path">Login</a>
        <a class="btn btn-warning" asp-controller="Account" asp-action="Signup">Register</a>
    </li>
}



