@model BookModel

<div class="card mb-4 shadow-sm">
    <img src="@(string.IsNullOrEmpty(Model.CoverImageUrl) ? "/images/logo.png" : Model.CoverImageUrl )" class="img-thumbnail" />
    <div class="card-body">
        <h5 class="card-title">@(string.IsNullOrEmpty(Model.Title) ? "Name is not availabale" : Model.Title)</h5>
        <p class="card-text">@(string.IsNullOrEmpty(Model.Description) ? "Name is not availabale" : Model.Description)</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="book" asp-action="getbook" asp-route-id="@Model.Id"
                   asp-route-nameOfBook="@Model.Title" class="btn btn-primary">View Details</a>
            </div>

            <small class="text-muted">@(string.IsNullOrEmpty(Model.Author) ? "Name is not availabale" : Model.Author)</small>
        </div>
    </div>
</div>